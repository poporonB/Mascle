<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#91B9F5"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- メニュー1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="・メニュー1"
                        android:textColor="#80E12A"/>

                    <TextView
                        android:id="@+id/menu1"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="メニュー1の名前"/>

                    <TextView
                        android:id="@+id/time1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="タイム1"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- メニュー2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="・メニュー2"
                        android:textColor="#80E12A"/>

                    <TextView
                        android:id="@+id/menu2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="メニュー2の名前"/>

                    <TextView
                        android:id="@+id/time2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="タイム2"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- メニュー3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="・メニュー3"
                        android:textColor="#80E12A"/>

                    <TextView
                        android:id="@+id/menu3"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="メニュー3の名前"/>

                    <TextView
                        android:id="@+id/time3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="タイム3"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- メニュー4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:text="・メニュー4"
                        android:textColor="#80E12A"/>

                    <TextView
                        android:id="@+id/menu4"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="メニュー4の名前"/>

                    <TextView
                        android:id="@+id/time4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:text="タイム4"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="0dp"
                    android:layout_height="250dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <!-- メニュー5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="#FFFFFF"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
